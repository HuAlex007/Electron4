{
  "name": "Electron4",
  "version": "4.0.16",
  "license": "ISC",
  "description": "My Electron4 description",
  "author": "AlexHu",
  "productName": "Electron4",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "npm install && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "productName": "Electron4",
    "appId": "com.hualex007.Electron4",
    "copyright": "hualex007",
    "directories": {
      "output": "buildDir"
    },
    "dmg": {
      "background": "build/background.png",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icon.icns"
    },
    "linux": {
      "icon": "build/icons"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icon.ico",
      "uninstallerIcon": "./build/icon.ico",
      "installerHeaderIcon": "./build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Electron4"
    }
  },
  "updater": {
    "url": "https://raw.githubusercontent.com/HuAlex007/Electron4/master/update.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HuAlex007/Electron4.git"
  },
  "bugs": {
    "url": "https://github.com/HuAlex007/Electron4/issues"
  },
  "homepage": "https://github.com/HuAlex007/Electron4#readme",
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "electron-builder-squirrel-windows": "^22.5.1",
    "electron-installer-squirrel-windows": "^1.3.0",
    "electron-winstaller": "^4.0.0"
  },
  "dependencies": {
    "@electron-forge/publisher-electron-release-server": "^6.0.0-beta.50",
    "electron-log": "^4.1.1",
    "electron-simple-updater": "^2.0.8",
    "now": "^17.1.1",
    "update-electron-app": "^1.5.0"
  }
}
